generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id           String    @id @default(uuid())
    email        String    @unique
    first_name   String
    last_name    String
    password     String
    bank         Bank?
}

model Otp {
    id           String    @id @default(uuid())
    otp          String
    email        String    @unique
    first_name   String
    last_name    String
    password     String
}

model Bank {
    user           User @relation(fields: [userId] , references: [id])
    userId         String @unique
    balance        Int
}